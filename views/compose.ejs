<%- include("partials/header"); -%>

<h1>Compose</h1>

<div class="container">
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" type="text" name="postTitle" autocomplete="off"/>
    </div>
    <div class="form-group">
      <label for="post">Post</label>
      <textarea class="form-control" type="textarea" rows="5" name="postBody"></textarea>
    </div>

    <button class="btn btn-lg btn-primary" type="submit" name="button">Publish</button>
  </form>
</div>

<%- include("partials/footer"); -%>
